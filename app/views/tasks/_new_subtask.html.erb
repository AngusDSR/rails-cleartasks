<%= form_for [task, @subtask], url: task_subtasks_path(task) do |f| %>
  <%# this needs setting up properly with JS/Ajax %>
  <% if task.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>
        <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  <div class="input-group my-3">
    <%= f.text_field :content, placeholder: "Enter sub task", class: "form-control" %>
    <%= f.submit class: "input-group-text" do %>
      <%= icon('fas', 'plus') %>
    <% end %>
  </div>
<% end %>
