<%# 'Tasks' with details %>
<div class="container-tasks">
  <h2 class="section-title">Tasks</h2>
  <%= render "tasks/tasks", tasks: @tasks %>
</div>

<%# New tasks entered as rough notes %>
<div class="container-notes-col">
  <%= render "tasks/new_notes", new_task: @new_task %>

  <%# Notes that need details from user %>
  <div class="container-notes-details">
    <h2 class="section-title">Notes</h2>
    <%= render "tasks/notes", new_tasks: @new_tasks %>
  </div>
</div>
<div>
  <% @tasks.each do |task| %>
    <div class="task">
      <h3><%= task.name %></h3>
      <p><%= task.content %></p>
      <ul>
        <% task.subtasks.each do |subtask| %>
          <li><%= subtask.content %></li>
        <% end %>
      </ul>
      <%= render partial: "create_subtask", locals: { task: task} %>
    </div>
  <% end %>
</div>
