<h1>Tasks: Home</h1>
Add a new note
  <%= simple_form_for(@new_task) do |form| %>
    <div>
      <%= form.label :content %>
      <%= form.text_field :content, required: true %>
    </div>
    <%= form.submit "Create Task" %>
  <% end %>
<hr>1

<h2>Notes</h2>
<% @new_tasks.each do |task| %>
  <div>
    <input type="checkbox">
    <p class="note-text"><%= task.content %></p>


    <%= render "tasks/update_form", task:task %>
    <hr>
  </div>
<% end %>

<h2>Tasks:</h2>
<% @tasks.each do |task| %>
<button class="view_task">open task</button>
 <p> <%= task.name %>  </p>
 <div class="taskview">
 <p> * <%= task.reason %> </p>
 <p> * <%= task.contact %> </p>
 <p> * <%= task.due_date %> </p>
 <p> * <%= task.importance %> </p>
 <p> * <%= task.difficulty %> </p>
 </div>
<% end %>

