<div class="container-tasks border-end" data-controller="hide-task-tabs">
  <h2 class="section-title m-0" data-hide-task-tabs-target="tasksTitle">
    Tasks
  </h2>

  <%# See completed tasks button %>
  <%= link_to completed_tasks_path, class: "see-completed-collapsed", aria: { label: "See completed tasks" } do %>
    <p class="text-hidden">See completed tasks</p>
    <i class="fa-solid fa-chevron-down"></i>
  <% end %>

  <%= render "tasks/tasks", tasks: @tasks %>
</div>

<%# New tasks entered as rough notes %>
<div class="container-notes-col"
  data-controller="new-note-form-submit"
>
  <%= render "tasks/new_notes", new_task: @new_task %>

  <%# Notes that need details from user %>
  <div class="container-notes-details">
    <h2 class="section-title">Notes</h2>
    <%= render "tasks/notes", new_tasks: @new_tasks %>
  </div>
</div>
