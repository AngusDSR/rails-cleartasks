<h1>Tasks: Home</h1>
Add a new note
  <%= simple_form_for(@new_task) do |form| %>
    <div>
      <%= form.label :content %>
      <%= form.text_field :content, required: true %>
    </div>
    <%= form.submit "Create Task" %>
  <% end %>
<hr>1

<h2>Notes</h2>
<% @tasks.each do |task| %>
  <div>
    <input type="checkbox">
    <p class="note-text"><%= task.content %></p>
     <%= simple_form_for(task) do |f| %>
      <%= task.content %>
      <%= f.input :reason %>
      <%= f.input :contact %>
      <%= f.input :due_date %>
      <%= f.input :importance %>
      <%= f.input :difficulty %>
      <%= f.submit %>
    <% end %>

    <%= render "tasks/update_form" %>
    <hr>
  </div>
<% end %>\

